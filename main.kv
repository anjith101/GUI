#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<StarterMenu>:
    transition: FadeTransition()
    FloatLayout:
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"right":1, "top":1}
            font_size: 15
            text: 'NEXT'
            bold: True
            italic: True
            background_normal: 'button.png'
            background_down: 'button.png'
            color: 1, 1, 0, 1
            
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'mycart'
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"right":0.3, "top":1}
            font_size: 15
            text: 'PREVIOUS'
            bold: True
            italic: True
            background_normal: 'button.png'
            background_down: 'button.png'
            color: 1, 1, 0, 1
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mycart'

        
        Button:
            size_hint: 0.2,0.2
            pos_hint: {"right":0.2, "top":0.85}
            font_size: 15
            text: 'VEG STICKS'
            bold: True
            italic: True
            background_normal: 'vegsticks.png'
            background_down: 'vegsticks.png'
            color: 1, 1, 0, 1
        Button:
            size_hint: 0.2,0.2
            pos_hint: {"right":0.5, "top":0.3}
            font_size: 15
            text: 'FRENCH FRIES'
            bold: True
            italic: True
            background_normal: 'frnchfry.png'
            background_down: 'frnchfry.png'
            color: 1, 1, 0, 1
        Button:
            size_hint: 0.2,0.2
            pos_hint: {"right":0.5, "top":0.6}
            font_size: 15
            text: 'SAMOSA'
            bold: True
            italic: True
            background_normal: 'samosa.png'
            background_down: 'samosa.png'
            color: 1, 1, 0, 1
        Button:
            size_hint: 1,0.1
            pos_hint: {"right":1, "top":0.1}
            font_size: 15
            text: 'ORDER'
            bold: True
            italic: True
            color: 0, 1, 0, 1
            background_normal: 'button1.png'
            background_down: 'button1.png'
            
        

<MycartMenu>:
    transition: FadeTransition()
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to starter'
            on_press: root.manager.current = 'starter'