#:import Factory kivy.factory.Factory
<MyPopup@Popup>:
    auto_dismiss: False
    size_hint: 0.3,0.3
    
    GridLayout:  
        size_hint: 1,0.6
        pos_hint: {"right":1, "top":0.6}
        rows: 1
        cols: 2
        padding: 10
        spacing: 10
        Button:
            size_hint: 0.2,0.1
            pos_hint: {"right":0.3, "top":0.2}
            background_normal: 'minus.png'
            background_down: 'minus.png'
            

        Button:
            size_hint: 0.2,0.1
            pos_hint: {"right":0.8, "top":0.2}
            background_normal: 'plus.png'
            background_down: 'plus.png'
       
<StarterMenu>:
    canvas:
        Rectangle:
            source: 'images.jpeg'
            pos: self.pos
            size: self.size
    FloatLayout:
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"right":1, "top":1}
            font_size: 15
            text: 'NEXT'
            bold: True
            italic: True
            background_normal: 'button.png'
            background_down: 'button.png'
            color: 1, 1, 0, 1
            
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'mainmenu'
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"right":0.3, "top":1}
            font_size: 15
            text: 'PREVIOUS'
            bold: True
            italic: True
            background_normal: 'button.png'
            background_down: 'button.png'
            color: 1, 1, 0, 1
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mycart'

        Button:
            size_hint: 1,0.1
            pos_hint: {"right":1, "top":0.1}
            font_size: 15
            text: 'ORDER'
            bold: True
            italic: True
            color: 0, 1, 0, 1
            background_normal: 'button1.png'
            background_down: 'button1.png'

    GridLayout:  
